name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: Input artifact containing the data to be cleaned.
        type: string

      output_artifact:
        description: Output artifact containing the cleaned data.
        type: string

      output_type:
        description: Type of the output artifact.
        type: string

      output_description:
        description: Description of the output artifact.
        type: string

      min_price:
        description: Minimal value of price to be considered.
        type: float

      max_price:
        description: Maximal value of price to be considered.
        type: float


    command: >-
        python run.py  --input_artifact {input_artifact}  --output_artifact {output_artifact}  --output_type {output_type}  --output_description {output_description}  --min_price {min_price}  --max_price {max_price} 
